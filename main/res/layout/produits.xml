<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom du produit" />

    <EditText
        android:id="@+id/editTextNomProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="designationProduit" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="prix du produit" />

    <EditText
        android:id="@+id/editTextPrixProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="prix" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catégories (ajouter une categorie si elle n'existe pas)" />

    <EditText
        android:id="@+id/editTextSaisieCategorieProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="le nom de la catégorie" />

    <Spinner
        android:id="@+id/spinnerProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir La photo" />

    <EditText
        android:id="@+id/editTextPhotoProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="saisir le nom de la photo" />

    <Button
        android:id="@+id/buttonAjouterProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un produit" />

    <Button
        android:id="@+id/buttonModifierProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier un Produit" />

    <Button
        android:id="@+id/buttonSupprimerProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supprimer un produit" />

    <TextView
        android:id="@+id/textViewMessageProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message" />

</LinearLayout>