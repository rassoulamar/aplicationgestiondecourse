<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom Client" />

    <EditText
        android:id="@+id/editTextNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Saisir nom client" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="N° Téléphone" />

    <EditText
        android:id="@+id/editTextNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="Saisir Num Client" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresse du Client" />

    <EditText
        android:id="@+id/editTextAdresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="saisir l'adresse du client" />

    <Button
        android:id="@+id/buttonAjouterClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter le client"
        android:paddingVertical="10dp"/>

    <TextView
        android:id="@+id/textViewChoisirClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir un client dans la liste" />

    <Spinner
        android:id="@+id/spinnerClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" />

    <Button
        android:id="@+id/buttonModifierClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="modifier les info du client selectionner" />

    <Button
        android:id="@+id/buttonSupprimerClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supprimer le client selectionner" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faire les courses du client selectionner" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message" />

</LinearLayout>